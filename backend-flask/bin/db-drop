# Script compatible with both zsh and bash shells
#!/usr/bin/env bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-drop"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

NO_DB_CONNECTION_URL=$(sed 's/\/cruddur//g' <<< "$DEV_CONNECTION_URL")

psql $NO_DB_CONNECTION_URL -c "DROP DATABASE cruddur;" && echo "Database Deleted Successfully"